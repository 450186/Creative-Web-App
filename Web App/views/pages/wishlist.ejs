<%- include("../partials/header") %>

<% if (wishList.length === 0) { %>
    <p id="errorMessage">Your Wishlist is Empty</p>
    <p style="text-align: center;"">Visit <a href="home">Home</a> to add locations to your wishlist</p>
<% } %>
<% wishList.forEach(item => { %>
    <div id="location-div">
        <h2><%= item.country %></h2>
        <h3><%= item.city %></h3>
        <form method="GET" action="/location">
            <script>
                console.log("Going to /location")
            </script>
            <input type="hidden" name="latitude" value="<%= item.latitude %>">
            <input type="hidden" name="longitude" value="<%= item.longitude %>">
            <button type="submit">View Location</button>
        </form>
        <form method="POST" action="/remove-wishlist" style="display: inline;">
            <input type="hidden" name="city" value="<%= item.city %>">
            <input type="hidden" name="country" value="<%= item.country %>">
            <button type="submit">Remove from Wishlist</button>
        </form>
    </div>
<% }) %>
<%- include("../partials/footer") %>